<div class="list-background">
  <div class="list">
    <a class="more-icon sm-icon" href=""></a>
    {{#if list.subscribed }}
    <i class="sub-icon sm-icon"></i>
    {{/if }}
    <div>
      <input type="text" class="list-title" value="{{ list.title }}">
    </div>
    {{#if (topTempCardSlot list) }}
    <div class="add-dropdown add-top active-card">
      <div class="card">
        {{> tempCard tempCard }}
    {{else}}
    <div class="add-dropdown add-top">
      <div class="card">
    {{/if}}
      </div>
      <a class="button">Add</a><i class="x-icon icon"></i>
      <div class="add-options"><span>...</span></div>
    </div>
    <div id="cards-container" data-id="list-{{ list.id }}-cards">
    </div>
    {{#if (botTempCardSlot list) }}
    <div class="add-dropdown add-bottom active-card">
      <div class="card">
        {{> tempCard tempCard }}
    {{else}}
    <div class="add-dropdown add-bottom">
      <div class="card">
    {{/if}}
      </div>
      <a class="button">Add</a><i class="x-icon icon"></i>
      <div class="add-options"><span>...</span></div>
    </div>
    <div class="add-card-toggle" data-position="bottom">Add a card...</div>
  </div>
</div>